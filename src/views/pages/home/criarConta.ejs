<%- include('../../partials/header.ejs') %>

    <body>
        <div class="container-fluid min-vh-100">
            <div class="row">
                <div class="col bg-secondary d-flex justify-content-center">
                    <header>
                        <figure>
                            <img src="./assets/logo.png" alt="Logo Carfy">
                        </figure>
                    </header>
                </div>
            </div>
            <main class="row pt-2 d-flex justify-content-center">
                <div class="col-xs-12 col-sm-12 col-md-6 col-xl-4">
                    <form action="/newUser" method="POST">
                        <fieldset>
                            <legend>Criar conta</legend>
                            <label class="form-label p-2" for="name">Nome :</label>
                            <input class="form-control" type="text" name="name" id="name" placeholder="Seu nome">
                            <label class="form-label p-2" for="cpf">Cpf :</label>
                            <input class="form-control" type="text" name="cpf" id="cpf" placeholder="CPF">
                            <label class="form-label p-2" for="name">Celular :</label>
                            <input class="form-control" type="text" name="celular" id="celular" placeholder="Celular">
                            <label class="form-label p-2" for="">Email :</label>
                            <input class="form-control" type="text" name="email" id="email"
                                placeholder="Digite seu email" aria-label=".form-control-lg">
                            <label class="form-label p-2" for="">Senha :</label>
                            <input class="form-control" type="password" name="password" placeholder="Digite sua senha">
                            <label class="form-label p-2" for="">Confirmar Senha :</label>
                            <input class="form-control" type="password" name="password_confirm"
                                placeholder="Digite sua senha">
                            <div class=" d-flex justify-content-center pt-4 flex-column">
                                <button class="btn btn-success mt-2">Criar Conta</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </main>
        </div>

        <!--final Body-->
        <%- include('../../partials/footer.ejs') %>