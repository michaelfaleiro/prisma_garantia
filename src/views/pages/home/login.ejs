<%- include('../../partials/header.ejs') %>

    <body>
        <div class="container-fluid min-vh-100">
            <div class="row">
                <div class="col bg-secondary d-flex justify-content-center">
                    <header>
                        <figure>
                            <img src="./assets/logo.png" alt="Logo Carfy">
                        </figure>
                    </header>
                </div>
            </div>
            <main class="row pt-2 d-flex justify-content-center">
                <div class="col-xs-12 col-sm-12 col-md-6 col-xl-5">
                    <form action="/loginuser" method="POST">
                        <fieldset>
                            <legend>Cadastre-se ou Acesse sua Conta</legend>
                            <label class="form-label p-2" for="">Email :</label>
                            <input class="form-control" type="text" name="email" id="email"
                                placeholder="Digite seu email" aria-label=".form-control-lg">
                            <label class="form-label p-2" for="">Senha :</label>
                            <input class="form-control" type="password" name="password" placeholder="Digite sua senha">
                            <div class=" d-flex justify-content-center pt-4 flex-column">
                                <button class="btn btn-primary mt-2">Entrar</button>
                                <a class="btn btn-success mt-2" href="/newUser">
                                    Criar Conta
                                </a>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </main>
        </div>

        <!--final Body-->
        <%- include('../../partials/footer.ejs') %>